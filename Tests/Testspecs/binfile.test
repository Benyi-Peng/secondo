#
# a test for the BinaryFile Algebra
# run with : Runner -c MyConfig.config < binfiletest
# (Runner can be found in directory UserInterfaces)

# clean up what may be left over from e.g. a segfault
delete database binfiletest;

#setup
create database binfiletest;
open database binfiletest;

(create a : binfile);
(update a := (binfile <file>binfile.test</file--->));

(create b : binfile);
(update b := (binfile <file>relalg.test</file--->));

(create relFile :
  (rel
    (tuple
      (
        (no int)
        (file binfile)
        (name string)
      )
    )
  )
);


(update relFile :=
(
  (rel
    (tuple
      (
        (no int)
        (file binfile)
        (name string)
      )
    )
  )
  (
    (1 <file>test-rgb.jpg</file---> "rgb.jpg")
  )
) );

#testcase binfile1
#yields (bool TRUE)
query a saveto "a.tmp";

#testcase binfile2
#yields (int 1)
query relFile feed filter[.file saveto .name] count;

#teardown
close database;
delete database binfiletest;

