set "ERA:TraceSort" = TRUE;

##############################################################################
# Setup
##############################################################################

#setup sort_benchmark_105G_test StandardAlgebra RelationAlgebra ExtRelation2Algebra

#--------------------------------------------------  
# Create objects opt and thousand

restore database opt from '$(SECONDO_BUILD_DIR)/bin/opt';
save plz to '$(SECONDO_BUILD_DIR)/bin/tmp/plz';
save thousand to '$(SECONDO_BUILD_DIR)/bin/tmp/thousand';
close database;

#--------------------------------------------------  
# Create database 

create database db_R10G;
open database db_R10G;
restore plz from '$(SECONDO_BUILD_DIR)/bin/tmp/plz';
restore thousand from '$(SECONDO_BUILD_DIR)/bin/tmp/thousand';
restore largetext from '$(SECONDO_BUILD_DIR)/Algebras/ExtRelation-2/Tests/objects/largetext';

#--------------------------------------------------  
# Create relation with 5 GB data and tuplesize 4 KByte

let R10G_T4KB = plz feed project[PLZ] thousand feed product head[26214400] extend[ival: randint(9), rval: randint(100) * 0.1, bval: TRUE, textval: subtext(largetext,1,4031), ran: randint(100000)] sortby[ran asc] remove[ran] consume;

##############################################################################
# TestCases
##############################################################################

#testcase R10G_T4KB
#yields (real 4096.0)
query R10G_T4KB feed head[1] tuplesize;

#--------------------------------------------------  

#testcase sortby_T4KB
#yields success
query R10G_T4KB feed sortby[textval asc, PLZ asc] count;

#--------------------------------------------------  

#testcase sortby2_T4KB
#yields success
query R10G_T4KB feed sortby2[textval asc, PLZ asc] count;


##############################################################################
# TearDown
##############################################################################

#teardown
close database;
delete database db_R10G;
