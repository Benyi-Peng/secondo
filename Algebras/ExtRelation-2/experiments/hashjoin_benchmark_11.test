#--------------------------------------------------  
# Enable Flags
#--------------------------------------------------  

set "ERA:TraceHybridHashJoin" = TRUE;
#set "SI:PrintCounters" = TRUE;
set "SI:PrintCmdTimes" = TRUE;
set "SI:NoQueryTimers" = TRUE;
set "SI:NoCommandEcho" = TRUE;
#set "SI:RelStatistics" = TRUE;
set "SMI:NoTransactions" = TRUE;

#--------------------------------------------------  
# Create and open database DB_TMP
#--------------------------------------------------  

#setup hashjoin_benchmark StandardAlgebra RelationAlgebra ExtRelation2Algebra

create database db_tmp;
open database db_tmp;

#--------------------------------------------------  
# Hybrid Hash-Join with 100000 Tuple x 10000 Tuple
# 128 KByte Memory
#--------------------------------------------------  

#testcase create_relation_A
#yields success
restore relA from '$(SECONDO_BUILD_DIR)/Algebras/ExtRelation-2/experiments/R50MB_T256B';

#testcase create_relation_B
#yields success
restore relB from '$(SECONDO_BUILD_DIR)/Algebras/ExtRelation-2/experiments/R50MB_T256B';

#testcase 100000_join_10000_sortmergejoin
#yields success
query relA feed relB feed sortmergejoin[Flob_a,Flob_b] count;

#testcase 100000_join_10000_hashjoin
#yields success
query relA feed relB feed hashjoin[Flob_a,Flob_b;1000] count;

#testcase 100000_join_10000_hashjoin
#yields success
query relA feed relB feed hashjoin[Flob_a,Flob_b;1000,-1,128*1024,-1] count;

#testcase delete_relation_A
#yields success
delete rel_A;

#testcase delete_relation_B
#yields success
delete rel_B;

##############################################################################
# TearDown
##############################################################################

#teardown
close database;
delete database db_tmp;
