#
# makefile for MTreeAlgebra module
#
########################################################################
DOCU_FILES = MT1 MTreeAlgebra.h \
             MT2 MTree.h \
             MT3 MTreeNodeMngr.h \
             MT4 MTreeNode.h \
             MT5 MTreeEntry.h \
             MT6 MTreeSplitpol.h \
             MT7 MTreeConfig.h \
             MT8 MetricRegistry.h \
             MT9 DistData.h \
             MT10 MTreeAlgebra.cpp \
             MT11 MTree.cpp \
             MT12 MTreeNodeMngr.cpp \
             MT13 MTreeNode.cpp \
             MT14 MTreeEntry.cpp \
             MT15 MTreeSplitpol.cpp \
             MT16 MTreeConfig.cpp\
             MT17 MetricRegistry.cpp \
             MT18 DistData.cpp

DOCU = docu

# inlcude global definitions
include ../../makefile.env

# expand compile flags if necessary
CCFLAGS += $(ALG_INC_DIRS)

# create objects and algebra library. The values for the variables
# OBJECTS and LIBOBJ are computed automatically by makefile.env
.PHONY: all
all: $(OBJECTS) $(LIBOBJ) $(DOCU)

# include pre-computed dependencies
include $(DEP_FILES)

# generic rule for creating a library
$(LIBOBJ): $(OBJECTS)
	$(create-lib)

# generic rule for cleaning all generated files
.PHONY: clean
clean:
	$(clean-algebra)

docu:	$(DOCU_FILES)
	cat $^ > docu_mtree
