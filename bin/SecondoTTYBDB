#!/bin/bash
#

if [ "$1" == "--valgrind" ]; then
  shift
  runner="valgrind --num-callers=25 --suppressions=vgs.txt --error-limit=no $(which SecondoBDB)"
else 
if [ "$1" == "--valgrindlc" ]; then
  shift
  runner="valgrind --num-callers=25 --leak-check=full --suppressions=vgs.txt --error-limit=no $(which SecondoBDB)"
else  
if [ "$1" == "--profile" ]; then
  shift
  runner="valgrind --tool=callgrind --dump-instr=yes  --trace-jump=yes  $(which SecondoBDB)"
else
  runner="$(which SecondoBDB)"
fi
fi
fi  

$runner $*
